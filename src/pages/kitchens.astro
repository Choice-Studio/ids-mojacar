---
import pageData from "../data/pageData.json";
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.vue";
import AllProjects from "../components/AllProjects.vue";

let currentPage = pageData[2].pageName;
---

<Layout
  title="Interior Design Solutions | IDS | Kitchens"
  page={currentPage}
>
  <main>
    <Hero
      client:visible
      title="Kitchens"
      body="Whether you envision a sleek, modern layout with state-of-the-art appliances or a cosy, traditional kitchen with warm, inviting tones, we bring your vision to life with impeccable attention to detail."
      buttonText="Our Kitchen Projects"
      buttonHref="#projects"
      buttonColor="primary"
      heroImage="37"
    />
    <section
      class="mt-36"
      id="projects"
    >
      <AllProjects
        filter="kitchen"
        client:visible
      />
    </section>
    <section class="bg-primary grid grid-cols-1 gap-24 mt-36">
      <section class="text-white text-center">
        <div class="wrapper bg-primary">
          <div class="bg-primary text-center py-14">
            <div>
              <h3 class="text-2xl highlight--underline">Our Bathrooms</h3>
              <img
                src="/project-images/97.jpeg?url"
                alt=""
                class="w-full h-80 mt-12"
              />
              <p class="my-12">
                Here, we have curated a collection of our finest bathroom transformations, each reflecting our passion for crafting spaces that blend relaxation with sophistication.
                <br>
                <br>
                From luxurious spa-like retreats to sleek, modern designs, our portfolio showcases the breadth of our creativity and attention to detail.
              </p>
              <a href="/bathrooms"
                ><button class="button--white"> View Our Bathrooms</button></a
              >
            </div>
          </div>
        </div>
      </section>
      <section class="text-white text-center">
        <div class="wrapper bg-primary">
          <div class="bg-primary text-center py-14">
            <div>
              <h3 class="text-2xl highlight--underline">Our Home Spaces</h3>
              <img
                src="/project-images/87.jpeg?url"
                alt=""
                class="w-full h-80 mt-12"
              />
              <p class="my-12">
                Here, you'll find a collection of complete home transformations,
                each reflecting our dedication to creating harmonious,
                personalized living spaces.
              </p>
              <a href="/home-spaces"
                ><button class="button--white"> View Our Home Spaces</button></a
              >
            </div>
          </div>
        </div>
      </section>
    </section>
  </main>
</Layout>

<style is:global lang="scss">
  .header__logo,
  .header__burger-menu {
    filter: brightness(9999);
  }
</style>
